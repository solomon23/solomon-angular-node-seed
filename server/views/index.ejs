<!doctype html>
<html lang="en" ng-app="myApp">
<head>
    <meta charset="utf-8">
    <title>Solomon Seed</title>
    <style>
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
    <script>
        var globals = {
            staticConfig: {
                mapping: <%- JSON.stringify(map) %>,
                cdn: '<%- config.cdn %>'
            }
            <% if (user) { %>
            , user: {
                id: '<%-user.id%>',
                login: '<%-user.login%>'
            }
            <%}%>
        }
    </script>
    <link rel="stylesheet" ng-href="{{'/css/app.css' | static}}" />
    <meta name="fragment" content="!" />
</head>
<body ng-cloak ng-controller="rootController">
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Project name</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li ng-class="{'active': location.path() == '/'}">
                        <a href="/">Page 1</a>
                    </li>
                    <li ng-class="{'active': location.path() == '/view2'}">
                        <a href="/view2">Page 2</a>
                    </li>
                    <li ng-class="{'active': location.path() == '/admin'}">
                        <a href="/admin">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div ng-view></div>
        <div>
            Solomon seed app: v<span app-version></span>
        </div>
    </div>

    <% include scripts %>
</body>
</html>
